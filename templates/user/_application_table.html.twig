<div>
    <h2 class="mb-3">Mes discussions</h2>
    <table class="table table-striped">
        <thead>
        <tr>
            <th scope="col">Titre de mon offre</th>
            <th scope="col">Cr√©ateur de la discussion</th>
            <th scope="col">Nombres de message</th>
            <th scope="col" class="text-center">Voir l'annonce</th>
            <th scope="col" class="text-center">Voir la discussion</th>
        </tr>
        </thead>
        <tbody>
        {% for application in applications %}
            <tr>
                <td>{{ application.offer.title }}</td>
                <td>{{ application.user.name }}</td>
                <td>{{ application.messages|length }}</td>
                <td class="text-center"><a class="btn btn-primary" href="{{ path('app_offer', {id:application.offer.id}) }}"><i class="fa-solid fa-magnifying-glass"></i></a></td>
                <td class="text-center"><a class="btn btn-warning" href="{{ path('app_offer', {id:application.offer.id}) }}"><i class="fa-regular fa-comment"></i></a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>